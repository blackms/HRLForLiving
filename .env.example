# HRL Finance System - Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Application Settings
# ============================================================================

# Server port (default: 8000)
PORT=8000

# Server host (default: 0.0.0.0 for Docker, 127.0.0.1 for local)
HOST=0.0.0.0

# ============================================================================
# CORS Settings
# ============================================================================

# Allowed CORS origins (comma-separated)
# Use * for development, specific origins for production
CORS_ORIGINS=*

# Production example:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# File Paths
# ============================================================================

# Directory for scenario configurations
CONFIGS_DIR=./configs

# Directory for trained models
MODELS_DIR=./models

# Directory for generated reports
REPORTS_DIR=./reports

# Directory for simulation results
RESULTS_DIR=./results

# Directory for TensorBoard logs
RUNS_DIR=./runs

# Directory for application logs
LOGS_DIR=./logs

# ============================================================================
# Training Settings
# ============================================================================

# Maximum number of training episodes allowed
MAX_TRAINING_EPISODES=10000

# Default save interval for checkpoints
DEFAULT_SAVE_INTERVAL=100

# Default number of evaluation episodes
DEFAULT_EVAL_EPISODES=10

# Random seed for reproducibility (optional)
# RANDOM_SEED=42

# ============================================================================
# Simulation Settings
# ============================================================================

# Maximum number of simulation episodes allowed
MAX_SIMULATION_EPISODES=100

# Default number of simulation episodes
DEFAULT_SIMULATION_EPISODES=10

# ============================================================================
# WebSocket Settings
# ============================================================================

# WebSocket ping timeout in seconds
WEBSOCKET_PING_TIMEOUT=60

# WebSocket ping interval in seconds
WEBSOCKET_PING_INTERVAL=25

# ============================================================================
# Frontend Settings (for development)
# ============================================================================

# Backend API URL for frontend
VITE_API_URL=http://localhost:8000

# Frontend development port
FRONTEND_PORT=5173

# Backend development port
BACKEND_PORT=8000

# ============================================================================
# Logging Settings
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable detailed logging
VERBOSE_LOGGING=false

# ============================================================================
# Performance Settings
# ============================================================================

# Number of worker processes for production (default: 4)
WORKERS=4

# Worker class for Gunicorn (default: uvicorn.workers.UvicornWorker)
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Maximum requests per worker before restart
MAX_REQUESTS=1000

# Maximum jitter for max_requests
MAX_REQUESTS_JITTER=50

# ============================================================================
# Security Settings (for production)
# ============================================================================

# Enable HTTPS redirect
# FORCE_HTTPS=true

# Secret key for session management (generate a secure random string)
# SECRET_KEY=your-secret-key-here

# API rate limiting (requests per minute)
# RATE_LIMIT=100

# ============================================================================
# Database Settings (optional, for future use)
# ============================================================================

# Database URL (if using database for metadata)
# DATABASE_URL=sqlite:///./hrl_finance.db

# ============================================================================
# Report Generation Settings
# ============================================================================

# Enable PDF generation (requires WeasyPrint)
ENABLE_PDF_REPORTS=true

# Report generation timeout in seconds
REPORT_TIMEOUT=300

# ============================================================================
# Docker Settings
# ============================================================================

# Docker compose project name
COMPOSE_PROJECT_NAME=hrl-finance

# Docker network name
NETWORK_NAME=hrl-network
